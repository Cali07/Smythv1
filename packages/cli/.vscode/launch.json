{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI - Agent Test",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--enable-source-maps"],
            "program": "${workspaceFolder}/dist/index.js",
            "cwd": "${workspaceFolder}/../../", // Set to monorepo root
            "args": ["agent", "./packages/cli/tests/data/crypto-assistant.smyth", "--mcp", "sse", "3388"],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/../core/dist/**/*.js", "${workspaceFolder}/../sdk/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/../core/**",
                "${workspaceFolder}/../sdk/**",
                "!**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
