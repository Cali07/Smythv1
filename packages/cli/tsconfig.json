{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "preserveSymlinks": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"],

        "types": ["node"],
        "paths": {
            // added this for pkce-challenge to resolve since we experienced issues with bundling it in commonjs env.
            // should be revised if we went with esm
            "pkce-challenge": ["../node_modules/pkce-challenge/dist/index.node.cjs"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
